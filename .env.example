############################################
# Environment Configuration Example
############################################

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4.1-nano-2025-04-14

# Backend Configuration
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
BACKEND_URL=http://backend:8000

# Logging Configuration
LOG_LEVEL=INFO

# WhatsApp Configuration
WHATSAPP_SESSION_PATH=./.wwebjs_auth

# Function-specific Configuration
OPENMETEO_API_URL=https://api.open-meteo.com/v1/forecast
HOME_ASSISTANT_URL=http://your-home-assistant.local:8123
HOME_ASSISTANT_TOKEN=your_home_assistant_token
IP_CAMERA_URL=http://your-camera-ip/snapshot.jpg
IP_CAMERA_USERNAME=admin
IP_CAMERA_PASSWORD=password

# System Configuration
MAX_MESSAGE_LENGTH=1000
FUNCTION_TIMEOUT=30

# Memory / Events
MEMORY_ENABLED=true
MEMORY_MAX_EVENTS=50
MEMORY_EVENTS_IN_CONTEXT=5
MEMORY_TTL_DAYS=7
REDIS_URL=redis://redis:6379/0

# Access Control
# Comma separated list of user IDs (phone numbers without @c.us) allowed to interact.
# If empty or unset, the bot will reply to everyone.
ALLOWED_USER_IDS=5491112345678,5491198765432

# Google Calendar Integration
# Provide OAuth client credentials directly in environment (Base64 JSON) OR raw JSON fields
# Option 1 (preferred for simplicity): paste the JSON for the installed app credentials
GOOGLE_CALENDAR_CLIENT_ID=
GOOGLE_CALENDAR_CLIENT_SECRET=
GOOGLE_CALENDAR_PRIMARY=Personal
TIMEZONE=UTC

# Wikipedia (optional overrides)
WIKI_PREFERRED_LANGS=en,es
