## Backend (Python FastAPI) Dockerfile
FROM python:3.11-slim AS base

ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PIP_NO_CACHE_DIR=1

WORKDIR /app

# System deps (curl for healthchecks / debugging, build-essential if some libs need compiling)
RUN apt-get update \
    && apt-get install -y --no-install-recommends build-essential curl \
    && rm -rf /var/lib/apt/lists/*

COPY requirements.txt ./
RUN pip install --upgrade pip && pip install -r requirements.txt

# Copy backend source
COPY backend ./backend

# Expose FastAPI port
EXPOSE 8000

# Default environment overrides for container runtime (can be overridden by docker-compose)
ENV BACKEND_HOST=0.0.0.0 \
    BACKEND_PORT=8000

# Use uvicorn directly (no reload in production container)
CMD ["python", "-m", "uvicorn", "backend.main:app", "--host", "0.0.0.0", "--port", "8000"]
